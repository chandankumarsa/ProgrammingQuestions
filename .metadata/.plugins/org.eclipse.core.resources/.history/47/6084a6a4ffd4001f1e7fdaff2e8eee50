package Practice;

import java.util.Scanner;

public class FibSeries {
    public static void main(String[] args) {
        System.out.println("Enter a Number:");
        int n = new Scanner(System.in).nextInt();

        if (n <= 0) {
            System.out.println("Please enter a positive integer greater than 0.");
        } else {
            System.out.print("Fibonacci series up to " + n + " terms: ");
            display(0, 1, 1, n); // Direct call to the recursive function
        }
    }

    static void display(int a, int b, int count, int n) {
        if (count > n) return; // Base condition to stop recursion
        System.out.print(a + " "); // Print Fibonacci number on the same line
        display(b, a + b, count + 1, n); // Recursive call with updated values
    }
}
