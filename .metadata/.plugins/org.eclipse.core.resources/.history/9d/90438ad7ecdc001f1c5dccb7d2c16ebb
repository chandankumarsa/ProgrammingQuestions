package Jan28;

import java.util.Scanner;

public class SumOfEvenOdd {
	public static void main(String[] args) {
		System.out.println("Enter a NUmber to Print the sum of Even and Odd Number");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
	}
	static int esum(int n,int sum) {
		if(n==0)return 0;
		int rem = n%10;
		if(rem%2==0) {
			sum = sum+rem;
		}
		return esum(n/10, sum);
	}
	static int osum(int n,int sum) {
		if(n==0)return 0;
		int rem = n%10;
		if(rem%2!=0) {
			sum = sum+rem;
		}
		return osum(n/10, sum);
	}

}
