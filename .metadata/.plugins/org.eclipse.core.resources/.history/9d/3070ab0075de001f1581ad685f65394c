package Jan29;

import java.util.Scanner;

public class ArmstrongNumber {
public static void main(String[] args) {
	System.out.println("ENter a NUmber to check if a Number is an Armstrong Number or not");
	Scanner sc= new Scanner(System.in);
	int n = sc.nextInt();
}
static boolean isArmstrong(int n,int i,int m,int sum) {
	if(i==0)return sum==m;
	sum+=Math.pow(n/10, m);
	return isArmstrong(n, i-1, m, sum);
	
}
}
