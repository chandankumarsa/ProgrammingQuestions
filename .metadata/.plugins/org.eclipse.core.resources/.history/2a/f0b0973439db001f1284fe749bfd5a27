package Jan26;

import java.util.Scanner;

public class PerfectNumber2 {
	public static void main(String[] args) {
		System.out.println("ENter a Number to check Perfect Number");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		isPerfect(n, n/2, 0)
	}
	static boolean isPerfect(int n, int i, int sum) {
		if (i == 0)
			return sum == n;
		if (n % i == 0) {
			sum = sum + i;
		}
		return isPerfect(n, i-1, sum);
	}

}
