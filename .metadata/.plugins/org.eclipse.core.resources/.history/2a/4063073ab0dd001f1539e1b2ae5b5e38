package Jan29;

import java.util.Scanner;

public class SumofEvenOdd {
	public static void main(String[] args) {
		System.out.println("ENter a Number to print sum of the even and odd");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		System.out.println("SUm of Even "+esum(n));
		System.out.println("SUm of Odd Number is :"+osum(n));
	}

	static int esum(int n) {
		if (n == 0)
			return 0;
		int rem = n % 10;
		if(n%2==0) {
			return rem+esum(n/10);
		}
		return esum(n/10);
	}

	static int osum(int n) {
		if (n == 0)
			return 0;
		int rem = n % 10;
		if(n%2!=0) {
			return rem+osum(n/10);
		}
		return osum(n/10);
	}
}
