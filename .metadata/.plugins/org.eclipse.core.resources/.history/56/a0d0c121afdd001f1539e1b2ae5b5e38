package Jan29;

import java.util.Scanner;

public class SumofThedigitShouldSingleDIgit {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		System.out.println("ENter a Number to calculate the sum of the digit should be in single DIgits : "+single(n));
	}
	static int single(int n) {
		if(n>=0 && n<=9)return n;
		return single(sum(n));
		}
	static int sum(int n) {
		if(n==0)return 0;
		return n%10+sum(n/10);
	}
}
