package Jan31;

import java.util.Scanner;

public class ReverseANumber {
public static void main(String[] args) {
	System.out.println("ENter a Number to reverse");
	Scanner sc = new Scanner(System.in);
	int n = sc.nextInt();
	
}
static int rev(int n,int rev) {
	if(n==0)return rev;
	rev+=(rev*10)+(n%10);
	return rev(n/10, rev)
}
}
