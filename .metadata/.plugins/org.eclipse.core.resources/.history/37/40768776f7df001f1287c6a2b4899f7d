package Jan31;

import java.util.Scanner;

public class HappyNumber3 {
public static void main(String[] args) {
	System.out.println("ENter a Umber to check Happy Number");
	Scanner sc = new Scanner(System.in);
	int n = sc.nextInt();
	System.out.println(HappyNumber(n));
}
static boolean HappyNumber(int n) {
	if(n==1)return true;
	if(n==4)return false;
	return HappyNumber(squareNumber(n));
}
static int squareNumber(int n) {
	if(n==0)return 0;
	int rem = n%10;
	return (rem*rem)+squareNumber(n/10);
}
}
