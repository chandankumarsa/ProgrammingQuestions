class X {
    int i;
    X(int i) {
        this.i = i;
    }
}

// Factory class
class Y {
    // Factory method to create and return an X object
    static X createInstance() {
        return new X(50); // Encapsulates creation logic
    }
}

public class Test {
    public static void main(String[] args) {
        // Use the factory class to get an instance of X
        X x1 = Y.createInstance();
        System.out.println(x1.i); // Outputs: 50
    }
}
