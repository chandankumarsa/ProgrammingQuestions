package Jan27;

import java.util.Scanner;

public class ArmstrongNumber {
public static void main(String[] args) {
	System.out.println("ENter a Number to check Armstrong Number");
	Scanner sc = new Scanner(System.in);
	int n = sc.nextInt();
	System.out.println(isArmstrong(n, n, 0));
}
public static int count(int n) {
	if(n==0)return 0;
	return 1+count(n/10);
}
public static boolean isArmstrong(int n,int m,int sum) {
	if(n==0)return m==sum;
	sum+=(int)Math.pow(n%10, count(m));
	return isArmstrong(n/10, m, sum);
}
}
