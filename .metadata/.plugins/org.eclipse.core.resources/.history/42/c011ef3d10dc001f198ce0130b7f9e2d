package Jan26;

import java.util.Scanner;

public class PerfectNumberRange1 {
	public static void main(String[] args) {
		System.out.println("ENter The Range to Print Perfect Number");
		Scanner sc = new Scanner(System.in);
		int st = sc.nextInt();
		int end = sc.nextInt();
	}
	static void rangePerfect(int st,int end) {
		if(st>end)return;
		if(isPerfect(st, st/2, 0)) {
			System.out.println(st);
		}
		rangePerfect(st+1, end);
		
	}
	static boolean isPerfect(int n,int i,int sum) {
		if(i==0)return sum==n;
		if(n%i==0) {
			sum = sum+i;
		}
		return isPerfect(n, i-1, sum);
	}

}
