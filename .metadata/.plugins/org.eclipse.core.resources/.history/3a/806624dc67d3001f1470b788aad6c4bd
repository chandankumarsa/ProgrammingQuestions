package NumberProgram;

import java.util.Scanner;

public class SumOfEvenOddPrintSeparate {
	public static void main(String[] args) {
		System.out.println("Enter a Number To Print Sum Of Even And Odd Print Separately");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int esum =0;
		int osum =0;
		while(n>0) {
			int rem = n%10;
			if(n%2==0) {
				esum= esum+rem;
			}else {
				osum = osum+rem;
			}
			n = n/10;
		}
		System.out.println("Sum Of The EVEN Number is : "+esum);
		System.out.println("SUm OF Odd Number IS : "+osum);
	}

}
