package Jan27;

import java.util.Scanner;

public class ArmstrongNumber {
    public static void main(String[] args) {
        System.out.println("Enter a Number to check Armstrong Number");
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        
        int numDigits = count(n); // Calculate number of digits once
        if (isArmstrong(n, numDigits, 0)) {
            System.out.println("Armstrong Number");
        } else {
            System.out.println("Not an Armstrong Number");
        }
    }

    public static int count(int n) {
        if (n == 0) return 0;
        return 1 + count(n / 10);
    }

    public static boolean isArmstrong(int n, int numDigits, int sum) {
        if (n == 0) return sum == numDigits; // Compare sum to original number
        sum += Math.pow(n % 10, numDigits); // Use the number of digits for calculation
        return isArmstrong(n / 10, numDigits, sum);
    }
}
