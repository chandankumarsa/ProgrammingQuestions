package Jan26;

import java.util.Scanner;

public class PerfectNumberRange {
public static void main(String[] args) {
	System.out.println("ENter a Number to Print Perfect Number in a Range");
	Scanner sc = new Scanner(System.in);
	System.out.println("ENter the start Range");
	int st = sc.nextInt();
	System.out.println("ENter the end Range");
	int end = sc.nextInt();
	PerfectRange(st,end)
}
static void PerfectRange(int st,int end) {
	if(st>end)return;
	if(isPerfect(st, st/2, 0))System.out.println(st);
	PerfectRange(st+1, end);
}
static boolean isPerfect(int n,int i,int sum) {
	if(i==0)return sum==n;
	if(n%i==0) {
		sum = sum+i;
	}
	return isPerfect(n, i-1, sum);
	
}
}
