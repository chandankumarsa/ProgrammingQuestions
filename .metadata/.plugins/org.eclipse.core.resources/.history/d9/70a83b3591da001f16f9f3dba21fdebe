package Jan25;

import java.util.Scanner;

public class SumOfEvenOddPrint {
	public static void main(String[] args) {
		System.out.println("Enter a Number to Print Sum of Even and Odd Print Separately");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		System.out.println("Sum of Even nUmber is : "+esum(n));
	}
	static int esum(int n) {
		if(n==0) {
			return 0;
		}
		int rem = n%10;
		if(n%2==0) {
			return rem+esum(n/10);
		}
		return esum(n/10);
	}
	static int osum(int n) {
		if(n==0) {
			return 0;
		}
		int rem = n%10;
		if(n%2!=0) {
			return rem+osum(n/10);
		}
		return osum(n/10);
	}

}
